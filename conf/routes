# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET   /                 controllers.Application.index

GET   /fetchAllCI    controllers.Application.fetchAllCi
GET   /fetchAllNightly    controllers.Application.fetchAllNightly
GET   /builds        controllers.Application.builds()

GET   /nevergreens	controllers.Application.nevergreens()

GET   /getDevices/   controllers.Application.getDevices()

POST  /setDevice/    controllers.Application.setDevice()

# Map static resources from the /public folder to the /assets URL path
GET   /assets/*file     controllers.Assets.at(path="/public", file)
GET   /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)